{% extends "layout.twig" %}

{% block content %}
<div class="bk-pt-default">

<header class="bk-header">
	<div class="wrapper clearfix">
		<div class="companyheader">
		    {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
		    {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
		</div>
		{{widget('extendednavigation', 'navigationheader', {"align":"left"})|raw}}
	</div>
</header> 

<div class="canvas">
	<div class="page-wrap">
		<section class="section main home-page">
			{{zone('main')|raw}}
		</section>
	</div>
</div>

<footer class="bk-footer">
	<div class="footer-border page-wrap">
		{{widget('profile', 'copyright', { 'profileType':'copyright', 'copyright':'profile'})|raw}}
	</div>
</footer>

</div>

{% endblock %}
